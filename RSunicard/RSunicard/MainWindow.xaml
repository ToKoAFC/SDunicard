<Window x:Class="RSunicard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSunicard"
        mc:Ignorable="d"
        Title="RSunicard" Height="400" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="233"/>
                <ColumnDefinition Width="233"/>
                <ColumnDefinition Width="234"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="DashboardTab" Grid.Column="0" Background="Gray" Click="DashboardClick">Podgląd</Button>
            <Button x:Name="ManageTab" Grid.Column="1" Background="LightGray" Opacity="0.6" Click="ManageClick">Zarządzaj</Button>
            <Button x:Name="RaportsTab" Grid.Column="2" Background="LightGray" Opacity="0.6" Click="RaportsClick">Raporty</Button>
        </Grid>

        <Grid x:Name="warningGrid" Visibility="Collapsed" Background="LightYellow" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Label x:Name="warningLabel" Grid.Column="0" FontSize="10"></Label>
            <Button x:Name="connectButton" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Width="60" Click="ConnectToCOMPortClick">Połącz</Button>
        </Grid>
        
        <StackPanel x:Name="DashboardContent" Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListView Grid.Column="0" x:Name="CompanyList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nazwa" Width="120" DisplayMemberBinding="{Binding CompanyName}" />
                            <GridViewColumn Header="Pracownicy" Width="80" DisplayMemberBinding="{Binding WorkersCount}" />
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <ListView Grid.Column="1" x:Name="EventsList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Data" Width="100" DisplayMemberBinding="{Binding EventDate}" />
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding CardID}" />
                            <GridViewColumn Header="Pracownik" Width="100" DisplayMemberBinding="{Binding WorkerName}" />
                            <GridViewColumn Header="Firma" Width="100" DisplayMemberBinding="{Binding CompanyName}" />
                            <GridViewColumn Header="Zdarzenie" Width="70" DisplayMemberBinding="{Binding EventType}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </StackPanel>

        <StackPanel x:Name="ManageContent" Grid.Row="2" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="50,100" Height="100" BorderThickness="2" Click="AddNewCompanyClick">Dodaj firmę</Button>
                <Button Grid.Column="1" Margin="50,100" Height="100" BorderThickness="2" Click="AddNewWorkerlick">Dodaj pracownika</Button>
            </Grid>
        </StackPanel>

        <StackPanel x:Name="RaportContent" Visibility="Collapsed" Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Margin="30,10" Grid.Row="0">Raport dzienny</Button>
                <Button Grid.Column="0" Margin="30,10" Grid.Row="1">Backup bazy danych</Button>                
            </Grid>
        </StackPanel>
    </Grid>
</Window>
